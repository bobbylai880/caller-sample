generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CallSession {
  id            String   @id @default(cuid())
  callSid       String   @unique
  to            String
  status        String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  transcription Json?
  metadata      Json?
}

